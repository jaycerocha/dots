# Variables
# Mod Keys
set $mod Mod4
set $alt Mod1
set $hyper Mod3

# Programs
set $terminal termite
set $browser chromium
set $editor subl

# Colors
set $black #000000
set $dark_gray #222222
set $gray #585756
set $accent #4ef4ca
set $urgent #DF6418

# Layout
set $border_width 2
gaps inner 20
gaps outer 20
#smart_gaps on
smart_borders on


# Workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"

# Screens
set $screen1 "DVI-I-1"
set $screen2 "HDMI-0"

workspace $ws1 output $screen1
workspace $ws2 output $screen1
workspace $ws3 output $screen1
workspace $ws6 output $screen2


# Key Bindings
# i3
# Restart (preserves layout/session, can be used when upgrading i3)
bindsym $mod+Ctrl+r restart

# Lock screen
bindsym $mod+Shift+x exec i3lock --color "#000000"

# Exit (logs out of your X session)
bindsym $mod+Shift+q exec i3-msg exit # "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"


# System
# Audio control
bindsym XF86AudioRaiseVolume exec amixer -D pulse set Master 5%+
bindsym XF86AudioLowerVolume exec amixer -D pulse set Master 5%-
bindsym XF86AudioMute exec amixer -D pulse set Master toggle

# Mic control
bindsym Shift+XF86AudioRaiseVolume exec amixer -D pulse set Capture 9%+
bindsym Shift+XF86AudioLowerVolume exec amixer -D pulse set Capture 9%-
bindsym XF86AudioMicMute exec amixer -D pulse set Capture toggle

# Print screen: full | select window or rectangle
bindsym --release $alt+s exec scrot -s ~/tmp/screenshot.png &&\
 xclip -selection clipboard -t image/png -i ~/tmp/screenshot.png
bindsym --release $alt+Shift+s exec scrot ~/tmp/screenshot.png &&\
 xclip -selection clipboard -t image/png -i ~/tmp/screenshot.png

# Workspace
# Go to workspace
bindsym $mod+r workspace $ws1
bindsym $mod+t workspace $ws2
bindsym $mod+g workspace $ws3
bindsym $mod+h workspace $ws4
bindsym $mod+y workspace $ws5
bindsym $mod+u workspace $ws6

# Move focused container to workspace
bindsym $mod+Shift+r move container to workspace $ws1
bindsym $mod+Shift+t move container to workspace $ws2
bindsym $mod+Shift+g move container to workspace $ws3
bindsym $mod+Shift+h move container to workspace $ws4
bindsym $mod+Shift+y move container to workspace $ws5
bindsym $mod+Shift+u move container to workspace $ws6

# Back and forth between last two workspaces
bindsym $mod+Tab workspace back_and_forth
workspace_auto_back_and_forth yes

# Change container layout to stacked | tabbed | toggle split
bindsym $mod+o layout tabbed
bindsym $mod+p layout toggle split

# Toggle tiling | floating
bindsym $mod+Shift+p floating toggle
# Mouse + $mod to drag floating windows
floating_modifier $mod


# Window
# Move focus
bindsym $mod+i focus up
bindsym $mod+l focus right
bindsym $mod+k focus down
bindsym $mod+j focus left

# Move focused window
bindsym $mod+Shift+i move up
bindsym $mod+Shift+l move right
bindsym $mod+Shift+k move down
bindsym $mod+Shift+j move left

# Toggle fullscreen for focused container
bindsym $mod+s fullscreen

# Open terminal | browser | editor | slack
bindsym $mod+Return exec $terminal
bindsym $mod+b exec $browser
bindsym $mod+c exec $editor

# Kill focused window
bindsym $mod+Ctrl+f kill

# Disable gaps and enable low profile bar
bindsym $mod+Shift+n exec i3 gaps inner all set 0 &&\
  i3 gaps outer all set 0 &&\
  pkill polybar &&\
  ~/.config/polybar/launch.sh low_profile &&\
  pkill compton

# Enable gaps and default bar
bindsym $mod+Shift+m exec i3 gaps inner all set 20 &&\
  i3 gaps outer all set 20 &&\
  pkill polybar &&\
  ~/.config/polybar/launch.sh default &&\
  compton -cb

# System font
font pango:fira 8

# Window colors
client.focused $black $black $accent $gray
client.focused_inactive $black $black $gray $gray
client.unfocused $black $black $gray $gray
client.urgent $black $black $urgent $gray

# Remove titlebar and hide window edges
for_window [class="^.*"] border pixel $border_width
# hide_edge_borders both

# Albert keybindings (_magic)
bindsym $mod+f exec albert toggle
bindsym $mod+d exec $HOME/projects/.albert_trigger.sh "gg "
bindsym $mod+v exec $HOME/projects/.albert_trigger.sh "sed "
bindsym $mod+m exec $HOME/projects/.albert_trigger.sh "yt "
bindsym $mod+x exec $HOME/projects/.albert_trigger.sh "la "
bindsym $mod+z exec $HOME/projects/.albert_trigger.sh "ch "
bindsym $mod+w exec $HOME/projects/.albert_trigger.sh "enit "


# Streaming
# bindsym XF86AudioPlay
bindsym XF86AudioPlay exec curl localhost:8268/pause
bindsym XF86AudioNext exec curl localhost:8268/next
bindsym XF86AudioPrev exec curl localhost:8268/back
bindsym XF86AudioStop exec curl localhost:8268/random

# Random
bindsym $mod+a exec feh $HOME/.config/i3/42.png

# Assign programs to workspaces
assign [class="Chromium"] $ws1
assign [class="Subl"] $ws2
assign [class="Termite"] $ws3
assign [class="obs"] $ws6
assign [class="chatty-Chatty"] $ws6

# Prepare background and start browser
# exec_always hsetroot -solid '#222222'
exec_always feh --bg-scale $HOME/.config/i3/bg.png

exec_always --no-startup-id ~/.config/polybar/launch.sh default
exec_always compton -bc

exec systemctl --user restart albert
exec dunst
exec $browser
